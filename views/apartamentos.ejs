                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Cerrar sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <h1>Apartamentos</h1>
        <form action="/apartamentos/agregar" method="post">
            <label for="numeroApto">Numero apartamento</label>
            <input title="numeroApto" type="text" name="numeroApto" id="numeroApto" required placeholder="Numero Apartamento">

            <label for="numeroTorre">Numero torre</label>
            <input title="numeroTorre" type="text" name="numeroTorre" id="numeroTorre" required placeholder="Numero Torre">

            <label for="estado">Estado</label>
            <select title="estado" name="estado" id="estado" >
                <optgroup label="Estado">
                    <option value="1" selected>Activo</option>
                    <option value="0">Inactivo</option>
                </optgroup>
            </select>

            <button type="submit" type="button"  onclick="createApartamento()">Crear Apartamento</button>
        </form>

        <table>

            <tr>
                <th>N° APARTAMENTO</th>
                <th>ESTADO</th>
            </tr>
            <% apartamentos.forEach(apartamento => { %>
                  <tr>
                    <td><%= apartamento.Apto %></td>
                    <td><%= apartamento.estado %></td>
                        <td>
                            <button class="btn btn-primary btn-sm btn-editar"
                                data-user-id="<%= apartamento.idApartamento %>"
                                data-bs-toggle="modal"
                                data-bs-target="#modal-editar-<%= apartamento.idApartamento %>">Editar</button>
                                <a href="/apartamentos/eliminar/<%= apartamento.idApartamento %>" class="btn-eliminar" title="Eliminar apartamento"
                                    onclick="return confirm('¿Estás seguro de que deseas eliminar este aoartamento?');">
                                    Eliminar
                                 </a>
                        </td>
                    </tr>

                    <div class="modal fade" id="modal-editar-<%= apartamento.idApartamento %>" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true" >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel"><%= apartamento.apto %></h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/apartamentos/actualizar/<%= apartamento.idApartamento %>" method="post">
                                        <label for="numeroApto">Numero apartamento</label>
                                        <input title="numeroApto" type="text" name="numeroApto" id="numeroApto" required placeholder="Numero Apartamento" value="<%= apartamento.numeroapto %>">
                            
                                        <label for="numeroTorre">Numero torre</label>
                                        <input title="numeroTorre" type="text" name="numeroTorre" id="numeroTorre" required placeholder="Numero Torre" value="<%= apartamento.numerotorre %>">
                                        <br>
                                        <label for="estado">Estado</label>
                                        <select title="estado" name="estado" id="estado" >
                                            <optgroup label="Estado">
                                                <option value="1">Activo</option>
                                                <option value="0">Inactivo</option>
                                            </optgroup>
                                        </select>
                                        <br>
                                        <div class="modal-footer">
                                            <button class="btn btn-primary btn-sm btn-guardar" type="submit">Guardar</button>
                                        </div>
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
            <% }) %>
        </table>
    </div>
    <script src="/controllers/apartamentosController.js"></script>
</body>

</html>
