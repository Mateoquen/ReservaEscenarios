<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DISPONIBILIDADES</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/views/css/styles.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="shortcut icon" href="../views/img/logo.png" />
</head>

<body id="views">
    <div class="container" id="container-views">

        <%- include('navbar.html') %>
        <button class="btn btn-primary" id="btn-generar-informe">Generar Informe</button>
        <h1>Disponibilidades</h1>
        <table id="Table" class="display">
            <thead>
                <tr>
                    <th>NOMBRE</th>
                    <th>AÑO</th>
                    <th>MES</th>
                    <th>DIA</th>
                    <th>HORA</th>
                </tr>
            </thead>
            <tbody>
                <% disponibilidades.forEach(disponibilidad=> { %>
                    <tr>
                        <td>
                            <%= disponibilidad.nombre %>
                        </td>
                        <td>
                            <%= disponibilidad.año %>
                        </td>
                        <td>
                            <%= disponibilidad.mes %>
                        </td>
                        <td>
                            <%= disponibilidad.dia %>
                        </td>
                        <td>
                            <%= disponibilidad.hora %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script src="../views/pagination.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            initializePagination();
            const btnGenerarInforme = document.getElementById('btn-generar-informe');
            btnGenerarInforme.addEventListener('click', function () {
                window.location.href = '/disponibilidades/informe'; // Ruta para generar el informe en el servidor
            });
        });
    </script>
</body>

</html>