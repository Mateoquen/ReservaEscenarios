<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DISPONIBILIDADES</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/views/css/styles.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
</head>

<body id="views">
    <div class="container" id="container-views">

        <nav class="navbar navbar-expand-lg navbar-light bg-light custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">RESERVA DE ESCENARIOS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Opciones
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/Roles">Roles</a></li>
                                <li><a class="dropdown-item" href="/Usuarios">Usuarios</a></li>
                                <li><a class="dropdown-item" href="/Horarios">Horarios</a></li>
                                <li><a class="dropdown-item" href="/escenariosDeportivos">Escenarios Deportivos</a>
                                </li>
                                <li><a class="dropdown-item" href="/Apartamentos">Apartamentos</a></li>
                                <li><a class="dropdown-item" href="/Reserva">Realizar reserva</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Cerrar sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <h1>Disponibilidades</h1>
        <table id="disponibilidadesTable" class="display">
            <thead>
                <tr>
                    <th>NOMBRE</th>
                    <th>MES</th>
                    <th>DIA</th>
                    <th>HORA</th>
                </tr>
            </thead>
            <tbody>
                <% disponibilidades.forEach(disponibilidad => { %>
                <tr>
                    <td><%= disponibilidad.nombre %></td>
                    <td><%= disponibilidad.mes %></td>
                    <td><%= disponibilidad.dia %></td>
                    <td><%= disponibilidad.hora %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#disponibilidadesTable').DataTable({
                "paging": true,
                "lengthMenu": [5, 10, 15], 
                "pagingType": "full_numbers", 
                "language": {
                    "paginate": {
                        "next": "Siguiente",
                        "previous": "Anterior",
                        "first": "Primero", 
                        "last": "Último"    
                    },
                    "lengthMenu": '<span class="white-text">Mostrar </span>_MENU_<span class="white-text"> registros por página</span>', 
                    "zeroRecords": "No se encontraron registros",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay registros disponibles",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)"
                }
            });
        });
    </script>
</body>

</html>
