        <h1>Escenarios Deportivos</h1>
        <form action="/escenariosdeportivos/agregar" method="post">
            <label for="idEscenario">Escenario</label>
            <input title="idEscenario" type="text" name="idEscenario" id="idEscenario" required placeholder="Escenario">

            <label for="nombre">Nombre</label>
            <input title="nombre" type="text" name="nombre" id="nombre" required placeholder="Nombre">

            <label for="idHorarios">Horarios</label>
            <select title="idHorario" name="idHorario" id="idHorario">
                <optgroup label="horario">
                    <% for (let i=0; i < horariosOptions.length; i++) { %>
                        <% for (let j=0; j < horariosOptions[i].length; j++) { %>
                            <option value="<%= horariosOptions[i][j].idHorario %>">
                                <%= horariosOptions[i][j].nombre %>
                            </option>
                            <% } %>
                            <% } %>
                </optgroup>
                <button type="button" onclick="createEscenario()">Crear Escenario</button>
            </select>
        </form>

        <table>

            <tr>
                <th>Escenario</th>
                <th>Nombre</th>
                <th>Horario</th>
                <th>Acciones --- Editar --- Eliminar</th>
            </tr>
            <% for (let i=0; i < escenarios.length; i++) { %>
                <tr>
                    <td>
                        <%= escenarios[i].idEscenario %>
                    </td>
                    <td>
                        <%= escenarios[i].nombre %>
                    </td>
                    <td>
                        <%= escenarios[i].idHorario %>
                    </td>
                    <td>
                        <button class="btn btn-primary btn-sm btn-editar"
                        data-user-id="<%= escenarios[i].idEscenario %>"
                        data-bs-toggle="modal"
                        data-bs-target="#modal-editar-<%= escenarios[i].idEscenario %>">Editar</button>
                        <a href="#" class="btn-eliminar" id="btn-elimiar" title="eliminar"
                            data-idEscenario="<%= Escenarios[i][j].idEscenario %>">Eliminar</a>
                    </td>
                </tr>
                <% } %>

