                </div>
            </div>
        </nav>
        <h1>HORARIOS</h1>
        <form action="" method="post">
            <label for="nombre">Nombre</label>
            <input title="nombre" type="text" name="nombre" id="nombre" required>
            <label for="horaInicial">Hora Inicial</label>
            <input title="horaInicial" type="time" name="horaInicial" id="horaInicial" required>
            <label for="horaFinal">Hora Final</label>
            <input title="horaFinal" type="time" name="horaFinal" id="horaFinal" required>
            <button type="button" onclick="createHorario()">Crear Horario</button>
        </form>
        <table>
            
            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>HORA INICIAL</th>
                <th>HORA FINAL</th>
                <th>EDITAR -- ELIMINAR</th>
            </tr>
            <% for (let i = 0; i < Horarios.length; i++) { %>
                <% for (let j = 0; j < Horarios[i].length; j++) { %>
                    <tr>
                        <td><%= Horarios[i][j].idHorario %></td>
                        <td><%= Horarios[i][j].nombre %></td>
                        <td><%= Horarios[i][j].horaInicial %></td>
                        <td><%= Horarios[i][j].horaFinal %></td>      
                        <td>
                            <a href="#" class="btn-editar" id="btn-editar" title="editar" data-idHorario="<%= Horarios[i][j].idHorario %>">Editar</a>
                            <a href="#" class="btn-eliminar" id="btn-eliminar" title="eliminar" data-idHorario="<%= Horarios[i][j].idHorario %>">Eliminar</a>
                        </td>
                    </tr>
                <% } %>
            <% } %>
        </table>
    </div>
    <script src="/public/Horarios.js"></script>
</body>

</html>
