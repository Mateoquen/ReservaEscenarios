                    </ul>
                </div>
            </div>
        </nav>
        <h1>ROLES</h1>
        <form action="" method="post">
            <label for="nombre">nombre</label>
            <input title="nombre" type="text" name="nombre" id="nombre" required>
            <label>Seleciona el Rol</label>
            <select title="administrador" name="Administrador" id="administrador">
                <optgroup label="Administrador">
                    <option value="1">SI</option>
                    <option value="0">NO</option>
                </optgroup>
            </select>
            <button type="button" onclick="createRol()">Crear Rol</button>
        </form>

        <table>

            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>ADMINISTRADOR</th>
                <th>EDITAR -- ELIMINAR</th>
            </tr>
            <% for (let i=0; i < Roles.length; i++) { %>
                <% for (let j=0; j < Roles[i].length; j++) { %>
                    <tr>
                        <td>
                            <%= Roles[i][j].idRol %>
                        </td>
                        <td>
                            <%= Roles[i][j].nombre %>
                        </td>
                        <td>
                            <%= Roles[i][j].administrador %>
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm btn-editar" data-user-id="<%= Roles[i][j].idRol %>"
                                data-bs-toggle="modal"
                                data-bs-target="#modal-editar-<%= Roles[i][j].idRol %>">Editar</button>
                            <a href="#" class="btn-eliminar" id="btn-eliminar" title="eliminar"
                                data-idRol="<%= Roles[i][j].idRol %>">Eliminar</a>
                        </td>
                    </tr>

                    <div class="modal fade" id="modal-editar-<%= Roles[i][j].idRol %>" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                                        <%= Roles[i][j].nombre %>
                                    </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="" method="post">
                                        <label>Nombre</label>
                                        <input type="text" class="form-control mb-3" name="nuevoRol"
                                            id="nuevoRol-<%= Roles[i][j].idRol %>" required
                                            value="<%= Roles[i][j].nombre %>">

                                        <label>Administrador</label>
                                        <select title="administrador" name="Administrador"
                                            id="nuevoAdmon-<%= Roles[i][j].admon%>">
                                            <optgroup label="Administrador">
                                                <option value="1">SI</option>
                                                <option value="0">NO</option>
                                            </optgroup>
                                        </select>
                                        <div class="modal-footer">
                                            <a href="#" class="btn-editar" id="btn-editar" title="editar"
                                                data-idRol="<%= Roles[i][j].idRol %>">Guardar</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% } %>
        </table>
    </div>
    <script src="/public/roles.js"></script>
</body>

</html>