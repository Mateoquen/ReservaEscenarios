        <h1>ROLES</h1>
        <form action="" method="post">
            <label for="nombre">nombre</label>
            <input title="nombre" type="text" name="nombre" id="nombre" required>
            <label for="administrador">Administrador</label>
            <input title="administrador" type="bit" name="administrador" id="administrador" required>
            <button type="button" onclick="createRol()">Crear Usuario</button>
        </form>
        
        <table>
            
            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>ADMINISTRADOR</th>
                <th>EDITAR -- ELIMINAR</th>
            </tr>
            <% for (let i = 0; i < Roles.length; i++) { %>
                <% for (let j = 0; j < Roles[i].length; j++) { %>
                    <tr>
                        <td><%= Roles[i][j].idRol %></td>
                        <td><%= Roles[i][j].nombre %></td>
                        <td><%= Roles[i][j].administrador %></td>

                        <td>
                            <a href="#" class="btn-editar" id="btn-editar" title="editar" data-idRol="<%= Roles[i][j].idRol %>">Editar</a>
                            <a href="#" class="btn-eliminar" id="btn-eliminar" title="eliminar" data-idRol="<%= Roles[i][j].idRol %>">Eliminar</a>
                        </td>
                    </tr>
                <% } %>
            <% } %>
        </table>
    </div>
    <script src="/public/roles.js"></script>
</body>

</html>
