        <h1>Usuarios</h1>
        <form action="" method="post">
            <label for="Nombre">nombre</label>
            <input title="nombre" type="text" name="nombre" id="nombre" required>
            <label for="clave">Clave</label>
            <input title="clave" type="password" name="clave" id="clave" required>
            <label for="Rol">Rol</label>
            <select title="idRol" name="idRol" id="idRol">
                <optgroup label="rol">
                    <% for (let i=0; i < rolesOptions.length; i++) { %>
                        <% for (let j=0; j < rolesOptions[i].length; j++) { %>
                            <option value="<%= rolesOptions[i][j].idRol %>">
                                <%= rolesOptions[i][j].nombre %>
                            </option>
                        <% } %>
                    <% } %>
                </optgroup>
            </select>
            <select title="idApartamento" name="idApartamento" id="idApartamento">
                <optgroup label="Apartamento">
                    <% for (let i=0; i < apartamentoOptions.length; i++) { %>
                        <% for (let j=0; j < apartamentoOptions[i].length; j++) { %>
                            <option value="<%= apartamentoOptions[i][j].idApartamento %>">
                                <%= apartamentoOptions[i][j].Apto %>
                            </option>
                        <% } %>
                    <% } %>
                </optgroup>
            </select>
            <button type="button" onclick="createUsuario()">Crear Usuario</button>
        </form>

        <table>

            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>clave</th>
                <th>Rol</th>
                <th>Apartamento</th>
            </tr>
            <% for (let i=0; i < Usuarios.length; i++) { %>
                <% for (let j=0; j < Usuarios[i].length; j++) { %>
                    <tr>
                        <td>
                            <%= Usuarios[i][j].idUsuario %>
                        </td>
                        <td>
                            <%= Usuarios[i][j].nombre %>
                        </td>
                        <td>
                            <%= Usuarios[i][j].clave %>
                        </td>
                        <td>
                            <%= Usuarios[i][j].nombreRol %>
                        </td>
                        <td>
                            <%= Usuarios[i][j].nombreApartamento %>
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm btn-editar"
                                data-user-id="<%= Usuarios[i][j].idUsuario %>"
                                data-bs-toggle="modal"
                                data-bs-target="#modal-editar-<%= Usuarios[i][j].idUsuario %>">Editar</button>
                            <a href="#" class="btn-eliminar" id="btn-eliminar" title="eliminar"
                                data-idUsuario="<%= Usuarios[i][j].idUsuario %>">Eliminar</a>
                        </td>
                    </tr>

                    <div class="modal fade" id="modal-editar-<%= Usuarios[i][j].idUsuario %>" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true" >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel"><%= Usuarios[i][j].nombre %></h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="" method="post">
                                        <label>Nombre</label>
                                        <input type="text" class="form-control mb-3" name="nuevoNombre"
                                            id="nuevoNombre-<%= Usuarios[i][j].idUsuario %>" required
                                            value="<%= Usuarios[i][j].nombre %>">
                                        <label>Clave</label>
                                        <input type="text" class="form-control mb-3" name="nuevaClave"
                                            id="nuevaClave-<%= Usuarios[i][j].idUsuario %>" required
                                            value="<%= Usuarios[i][j].clave %>">
                                        <label>Rol</label>
                                        <select title="idNuevoRol" name="idNuevoRol" id="idNuevoRol-<%= Usuarios[i][j].idUsuario %>">
                                            <optgroup label="rol">
                                                <% for (let i=0; i < rolesOptions.length; i++) { %>
                                                    <% for (let j=0; j < rolesOptions[i].length; j++) { %>
                                                        <option value="<%= rolesOptions[i][j].idRol %>">
                                                            <%= rolesOptions[i][j].nombre %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </optgroup>
                                        </select>
                                        <label>Apartamento</label>
                                        <select title="idNuevoApartamento" name="idNuevoApartamento"
                                            id="idNuevoApartamento-<%= Usuarios[i][j].idUsuario %>">
                                            <optgroup label="Apartamento">
                                                <% for (let i=0; i < apartamentoOptions.length; i++) { %>
                                                    <% for (let j=0; j < apartamentoOptions[i].length; j++) { %>
                                                        <option value="<%= apartamentoOptions[i][j].idApartamento %>">
                                                            <%= apartamentoOptions[i][j].Apto %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </optgroup>
                                        </select>
                                        <div class="modal-footer">
                                            <a href="#" class="btn-editar" id="btn-editar" title="editar"
                                                data-idUsuario="<%= Usuarios[i][j].idUsuario %>">Guardar</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </table>
    </div>
    <script src="/public/usuario.js"></script>
</body>

</html>
