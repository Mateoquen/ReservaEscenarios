        <h1>usuarios</h1>
        <form action="/usuarios/agregar" method="post">
            <label for="tipoId">tipoId</label>
            <select title="idRol" name="idRol" id="idRol">
                <optgroup label="rol">
                    <% tipoIdOptions.forEach(tipoId => { %>
                        <option value="<%= tipoId.idTipoId %>"><%= tipoId.nombreTipoId %></option>
                    <% }) %>
                </optgroup>
            </select>
            <label for="identificacion">Identificacion</label>
            <input title="identificacion" type="number" name="identificacion" id="identificacion" required placeholder="Identificacion">
            <br>
            <label for="Nombre">nombre</label>
            <input title="nombre" type="text" name="nombre" id="nombre" required placeholder="Nombres">
            <label for="clave">Clave</label>
            <input title="clave" type="password" name="clave" id="clave" required placeholder="Contraseña">
            <label for="Rol">Rol</label>
            <select title="idRol" name="idRol" id="idRol">
                <optgroup label="rol">
                    <% rolesOptions.forEach(rol => { %>
                        <option value="<%= rol.idRol %>"><%= rol.nombre %></option>
                    <% }) %>
                </optgroup>
            </select>
            <label for="Rol">Apartamento</label>
            <select title="idApartamento" name="idApartamento" id="idApartamento">
                <optgroup label="Apartamento">
                    <% apartamentosOptions.forEach(apartamento => { %>
                        <option value="<%= apartamento.idApartamento %>"><%= apartamento.Apto %></option>
                    <% }) %>
                </optgroup>
            </select><br>
            <button type="submit" type="button"  onclick="createUsuario()">Crear Usuario</button>
        </form>

        <table>

            <tr>
                <th>TIPO ID</th>
                <th>ID</th>
                <th>N° IDENTIFICACION</th>
                <th>NOMBRE</th>
                <!-- <th>clave</th> -->
                <th>ROL</th>
                <th>APARTAMENTO</th>
                <th>OPCIONES</th>
            </tr>
            <% usuarios.forEach(usuario => { %>
                  <tr>
                    <td><%= usuario.nombreTipoId %></td>
                    <td><%= usuario.identificacion %></td>
                    <td><%= usuario.idUsuario %></td>
                    <td><%= usuario.nombre %></td>
                    <!-- <td><%= usuario.clave %></td> -->
                    <td><%= usuario.nombreRol %></td>
                    <td><%= usuario.nombreApartamento %></td>
                        <td>
                            <button class="btn btn-primary btn-sm btn-editar"
                                data-user-id="<%= usuario.idUsuario %>"
                                data-bs-toggle="modal"
                                data-bs-target="#modal-editar-<%= usuario.idUsuario %>">Editar</button>
                                <a href="/usuarios/eliminar/<%= usuario.idUsuario %>" class="btn-eliminar" title="Eliminar usuario"
                                    onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">
                                    Eliminar
                                 </a>
                        </td>
                    </tr>

                    <div class="modal fade" id="modal-editar-<%= usuario.idUsuario %>" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true" >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel"><%= usuario.nombre %></h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/usuarios/actualizar/<%= usuario.idUsuario %>" method="post">
                                        <label for="tipoId">tipoId</label>
                                        <select title="idTipoId" name="idTipoId" id="idTipoId">
                                            <optgroup label="rol">
                                                <% tipoIdOptions.forEach(tipoId => { %>
                                                    <option value="<%= tipoId.idTipoId %>"><%= tipoId.nombreTipoId %></option>
                                                <% }) %>
                                            </optgroup>
                                        </select>
                                        <br>
                                        <label for="identificacion">Identificacion</label>
                                        <input title="identificacion" type="number" name="identificacion" id="identificacion" required placeholder="Identificacion" value="<%= usuario.identificacion %>">
                                        <br>
                                        <label>Nombre</label>
                                        <input type="text" class="form-control mb-3" name="nombre" id="nombre" required value="<%= usuario.nombre %>">
                                        <label>Clave</label>
                                        <input type="text" class="form-control mb-3" name="clave" id="clave" required value="encrypted">
                                        <!-- value="<%= usuario.clave %>"> -->
                                        <label>Rol</label>
                                        <select title="idRol" name="idRol" id="idRol">
                                            <optgroup label="rol">
                                                <% rolesOptions.forEach(rol => { %>
                                                    <option value="<%= rol.idRol %>" ><%= rol.nombre %></option>
                                                <% }) %>
                                            </optgroup>
                                        </select>
                                        <label>Apartamento</label>
                                        <select title="idApartamento" name="idApartamento" id="idApartamento">
                                            <optgroup label="Apartamento">
                                                <% apartamentosOptions.forEach(apartamento => { %>
                                                    <option value="<%= apartamento.idApartamento %>"><%= apartamento.Apto %></option>
                                                <% }) %>
                                            </optgroup>
                                        </select>
                                        <div class="modal-footer">
                                            <button class="btn btn-primary btn-sm btn-guardar" type="submit">Guardar</button>
                                        </div>
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
            <% }) %>
        </table>
    </div>
    <script src="/controllers/usuariosController.js"></script>
</body>

</html>
